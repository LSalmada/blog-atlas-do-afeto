{
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "html-validate": "^10.5.0",
    "husky": "^9.1.7",
    "prettier": "^3.7.4",
    "serve": "^14.2.4"
  },
  "scripts": {
    "dev": "browser-sync start --server 'public' --files 'public/**/*' --port 3000 --no-notify",
    "start": "serve ./public -l 3000",
    "validate:html": "node validate-html.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  }
}
